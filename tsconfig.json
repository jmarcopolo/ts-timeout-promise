{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "compiled",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}
